<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="order1" class="de.telran.Homework_9.Order">
        <constructor-arg name="item" value="Latte"/>
        <constructor-arg name="price" value="7.55"/>
    </bean>

    <bean id="order2" class="de.telran.Homework_9.Order">
        <constructor-arg name="item" value="Americano"/>
        <constructor-arg name="price" value="5.25"/>
    </bean>

    <bean id="gateway" class="de.telran.Homework_9.PaymentGateway"/>


</beans>